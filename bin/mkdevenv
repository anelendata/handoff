#!/bin/bash

python3 -m venv ./venv
/bin/bash -c "source ./venv/bin/activate && pip install wheel && deactivate"
/bin/bash -c "source ./venv/bin/activate && pip install -r requirements.txt && pip install -r requirements_dev.txt && deactivate"
/bin/bash -c "source ./venv/bin/activate && pip install -r docs/requirements.txt && deactivate"
